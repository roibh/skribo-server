    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "R | local skribo server",
            "program": "${workspaceRoot}\\index.js",
            "cwd": "${workspaceRoot}\\",
            "console": "internalConsole",
            "outFiles": [],
            "sourceMaps": true,
            "env": {
                "DEBUG": "none",
                "NODE_ENV": "debug",
                "NODE_LOG_LEVEL": "trace",
                "NODE_CONFIG_ENV": "prod",
                "NODE_CONFIG_DIR": "${workspaceRoot}/config/",
                "NODE_LOG_DIR": "./logs",
                "NODE_CONFIG_VAR": "vars.json",
                "MONGO_NAME": "skribo",
                "MONGO_PASSWORD": "Kardigan24%24",
                "PORT": "6200"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "R | prod skribo server",
            "program": "${workspaceRoot}\\index.js",
            "cwd": "${workspaceRoot}\\",
            "console": "internalConsole",
            "outFiles": [],
            "sourceMaps": true,
            "env": {
                "DEBUG": "none",
                "NODE_ENV": "debug",
                "NODE_LOG_LEVEL": "trace",
                "NODE_CONFIG_ENV": "prod",
                "NODE_CONFIG_DIR": "${workspaceRoot}/config/",
                "NODE_LOG_DIR": "./logs",
                "NODE_CONFIG_VAR": "vars.json",
                "MONGO_NAME": "skribo",
                "MONGO_PASSWORD": "Kardigan24%24",
                "PORT": "6200"
            }
        },

        {
            "request": "launch",
            "console": "internalConsole",
            // Name of configuration; appears in the launch configuration drop down menu.
            "name": "T | Run skribo tests",
            // Type of configuration. Possible values: "node", "mono".
            "type": "node",
            // Workspace relative or absolute path to the program.
            "program": "${workspaceRoot}/node_modules/alsatian/cli/alsatian-cli",
            // Automatically stop program after launch.
            "stopOnEntry": false,
            // Command line arguments passed to the program.
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.js",
            ],
            "sourceMaps": true,
            // Workspace relative or absolute path to the working directory of the program being debugged. Default is the current workspace.
            "cwd": "${workspaceRoot}",
            // Workspace relative or absolute path to the runtime executable to be used. Default is the runtime executable on the PATH.
            "runtimeExecutable": null,
            // Environment variables passed to the program.
            "env": {
                "PORT": "2092",
                "DEBUG": "tmla",
                "NODE_ENV": "debug",
                "NODE_CONFIG_ENV": "local",
                "NODE_LOG_LEVEL": "trace",
                "NODE_LOG_SILENT": "true",
                "NODE_CONFIG_DIR": "${workspaceRoot}/config/"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "U | build contracts",
            "program": "${workspaceRoot}\\node_modules\\@methodus\\contracts\\build.js",
            "args": [
                "./build.json"
            ],
            "cwd": "${workspaceRoot}\\",
            "console": "internalConsole",
            "sourceMaps": true,
            "env": {
                "DEBUG": "tmla",
                "NODE_ENV": "debug",
                "NODE_LOG_LEVEL": "debug",
                "NODE_CONFIG_ENV": "local",
                "NODE_CONFIG_DIR": "${workspaceRoot}/config/",
                "NODE_LOG_DIR": "./logs"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "U | build client contracts",
            "program": "${workspaceRoot}\\node_modules\\@methodus\\contracts\\client.js",
            "args": [
                "./build.json"
            ],
            "cwd": "${workspaceRoot}\\",
            "console": "internalConsole",
            "sourceMaps": true,
            "env": {
                "DEBUG": "none",
                "NODE_ENV": "debug"
            }
        },
    ]
}